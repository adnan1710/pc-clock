{
    "name": "fluent-clock",
    "version": "0.1.0",
    "description": "Minimal Electron + Vite + React clock with Fluent/Acrylic styling",
    "author": "Md Adnan Akhtar",
    "license": "MIT",
    "private": true,
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview --port 5173",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "electron-builder"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "@mui/material": "^5.14.0",
        "@mui/icons-material": "^5.14.0",
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0"
    },
    "devDependencies": {
        "vite": "^5.0.0",
        "electron": "^26.0.0",
        "electron-builder": "^24.0.0",
        "concurrently": "^8.0.0",
        "wait-on": "^7.0.0"
    },
    "build": {
        "appId": "com.example.fluentclock",
        "productName": "FluentFocus Clock",
        "publish": null,
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.png"
        },
        "nsis": {
            "installerIcon": "assets/icon.png",
            "uninstallerIcon": "assets/icon.png"
        },
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js",
            "package.json",
            "assets/**/*"
        ]
    }
}